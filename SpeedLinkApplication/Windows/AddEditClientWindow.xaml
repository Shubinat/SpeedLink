<Window x:Class="SpeedLinkApplication.Windows.AddEditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedLinkApplication.Windows"
        mc:Ignorable="d"
        Title="Клиент" Height="250" Width="350" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Клиент:</TextBlock>
                <TextBox Name="TBoxName"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Email:</TextBlock>
                <TextBox Name="TBoxEmail"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Номер телефона:</TextBlock>
                <TextBox Name="TBoxPhoneNumber"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Тип клиента:</TextBlock>
                <ComboBox Name="CBoxClientType" DisplayMemberPath="Name"></ComboBox>
            </StackPanel>
        </StackPanel>

        <Button Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" x:Name="BtnSave" Click="BtnSave_Click"/>
    </Grid>
</Window>

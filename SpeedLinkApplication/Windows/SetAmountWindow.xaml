<Window x:Class="SpeedLinkApplication.Windows.SetAmountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedLinkApplication.Windows"
        mc:Ignorable="d"
        Title="Введите количество" Height="120" Width="275" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Количество" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="TBoxAmount"/>
            </StackPanel>
            <Button Content="Сохранить" x:Name="BtnSave" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>

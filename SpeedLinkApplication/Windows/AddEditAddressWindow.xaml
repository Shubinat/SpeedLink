<Window x:Class="SpeedLinkApplication.Windows.AddEditAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedLinkApplication.Windows"
        mc:Ignorable="d"
        Title="Адрес" Height="290" Width="320" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Регион:</TextBlock>
                <TextBox Name="TBoxRegion"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Населенный пункт:</TextBlock>
                <TextBox Name="TBoxCity"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Улица:</TextBlock>
                <TextBox Name="TBoxStreet"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Дом:</TextBlock>
                <TextBox Name="TBoxHome"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5"  HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Margin="5">Квартира:</TextBlock>
                <TextBox Name="TBoxRoom"></TextBox>
            </StackPanel>
        </StackPanel>
        <Button Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" x:Name="BtnSave" Click="BtnSave_Click"/>

    </Grid>
</Window>
